{
  "expo": {
    "name": "Plantory",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/favicon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/favicon.png",
      "resizeMode": "contain",
      "backgroundColor": "#071A07"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourname.plantory",
      "infoPlist": {
        "NSCameraUsageDescription": "Plantory a besoin d'accéder à votre caméra pour votre photo de profil.",
        "NSPhotoLibraryUsageDescription": "Plantory a besoin d'accéder à vos photos pour personnaliser votre profil."
      }
    },
    "android": {
      "package": "com.yourname.plantory",
      "adaptiveIcon": {
        "foregroundImage": "./assets/favicon.png",
        "backgroundColor": "#071A07"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application a besoin d'accéder à vos photos.",
          "cameraPermission": "L'application a besoin d'accéder à votre appareil photo."
        }
      ]
    ]
  }
}
